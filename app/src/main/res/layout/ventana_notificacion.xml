<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|center_vertical"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <FrameLayout
            android:layout_width="250sp"
            android:layout_height="250sp"
            android:layout_margin="15dp"
            android:background="@android:color/transparent">

            <ImageView
                android:id="@+id/imgIcono_VentanaNotificacion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="100dp"
                app:srcCompat="@drawable/ic_admiracion" />

            <TextView
                android:id="@+id/txtMensaje_VentanaNotificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="60dp"
                android:gravity="center_vertical"
                android:text="Mensaje"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnAceptar_VentanaNotificacion"
                android:layout_width="171dp"
                android:layout_height="35dp"
                android:layout_gravity="bottom|center_horizontal"
                android:autoText="false"
                android:background="@drawable/botones"
                android:padding="0dp"
                android:text="Aceptar"
                android:textAllCaps="false"
                android:textColor="@color/texto_botones" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>